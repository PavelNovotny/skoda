{
  "dealers_index": {
    "settings": {
      "index": {
        "number_of_shards": 5,
        "analysis": {
          "normalizer": {
            "keyword_normalizer": {
              "type": "custom",
              "filter": [
                "lowercase",
                "icu_folding"
              ]
            }
          },
          "tokenizer": {
            "ngram_tokenizer": {
              "type": "ngram",
              "min_gram": "1",
              "max_gram": "30",
              "token_chars": []
            }
          },
          "analyzer": {
            "default": {
              "type": "custom",
              "tokenizer": "standard",
              "filter": [
                "lowercase",
                "icu_folding",
                "remove_duplicities"
              ]
            },
            "index_analyzer_ngram": {
              "type": "custom",
              "tokenizer": "ngram_tokenizer",
              "filter": [
                "lowercase",
                "icu_folding"
              ]
            },
            "search_analyzer_term": {
              "type": "custom",
              "tokenizer": "keyword",
              "filter": [
                "lowercase",
                "icu_folding",
                "truncate_filter"
              ]
            }
          },
          "filter": {
            "remove_duplicities": {
              "type": "unique",
              "only_on_same_position": false
            },
            "truncate_filter": {
              "type": "truncate",
              "length": 20
            }
          }
        }
      }
    }
  }
}

